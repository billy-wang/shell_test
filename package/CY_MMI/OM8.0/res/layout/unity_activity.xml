<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/unity_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/unity_title"/>

    <Button
        android:id="@+id/unity_btn_startmmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/startmmi"/>
    <ListView
        android:id="@+id/unity_lv_arear"
        android:layout_marginTop="10dp"
        android:layout_below="@id/unity_tv_title"
        android:layout_above="@id/unity_btn_startmmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"/>
</RelativeLayout>

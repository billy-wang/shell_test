<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView 
    	android:id="@+id/bt_title"
    	android:layout_alignParentTop="true"
    	android:layout_width="match_parent"
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:background="@color/test_blue"
    	android:textColor="@android:color/white"
    	android:layout_height="wrap_content"/>
    <include layout="@layout/right_wrong_restart"
    	android:id="@+id/right_wrong"
    	android:layout_height="wrap_content"
    	android:layout_width="match_parent"
    	android:layout_alignParentBottom="true"/> 
   	<ListView 
   		android:id="@+id/bt_content"
   		android:layout_below="@id/bt_title"
   		android:layout_width="match_parent"
   		android:layout_above="@id/right_wrong"
   		android:layout_height="match_parent"
   		android:layout_weight="1"/>
    
</RelativeLayout>
